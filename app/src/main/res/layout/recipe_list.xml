<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp">

<!--    <com.facebook.shimmer.ShimmerFrameLayout-->
<!--        android:id="@+id/shimmer_view_container2"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->
        <LinearLayout
            android:id="@+id/selectResep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:background="@color/colorSplash">
            <ImageView
                android:id="@+id/recipe_list_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:background="@color/colorAccent"/>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/recipe_list_image">
                <TextView
                    android:id="@+id/recipe_list_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:text="@string/recipes"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/recipe_list_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:text="@string/recipes"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/recipe_liked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Not"
                    android:visibility="invisible"/>
            </LinearLayout>

            <TextView
                android:id="@+id/recipe_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center"
                android:drawableEnd="@drawable/ic_search"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />
        </LinearLayout>
<!--    </com.facebook.shimmer.ShimmerFrameLayout>-->

</androidx.cardview.widget.CardView>